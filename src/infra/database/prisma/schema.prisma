generator kysely {
  provider             = "prisma-kysely"
  output               = "../types"
  fileName             = "types.ts"
  enumFileName         = "enums.ts"
  dateTimeTypeOverride = Date
  previewFeatures      = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  WAITING_ACTIVATION
  RESET_PASSWORD
}

enum UserRole {
  ADMIN
  USER
}

enum UserActivityStatus {
  PENDING
  APPROVED
  REJECTED
}


model User {
  id         Int          @id @default(autoincrement())
  externalId String?      @default(uuid()) @map("external_id") @unique
  name       String
  email      String       @unique
  password   String
  avatarURL  String?      @map("avatar_url")
  status     UserStatus   @default(ACTIVE)
  role       UserRole     @default(USER)
  createdAt  DateTime     @map("created_at") @default(now())
  updatedAt  DateTime     @map("updated_at") @updatedAt

  rankings           Ranking[]
  activities         UserActivity[] @relation("UserActivities")
  approvedActivities UserActivity[] @relation("Approver")
  images             Image[]

  @@map("users")
}

model Category {
  id          Int          @id @default(autoincrement())
  name        String
  points      Int
  description String?
  createdAt   DateTime     @map("created_at") @default(now())
  updatedAt   DateTime     @map("updated_at") @updatedAt

  actions    Action[]
  challenges Challenge[]

  @@map("category")
}

model Action {
  id          Int          @id @default(autoincrement())
  name        String
  date        DateTime
  description String?
  categoryId  Int          @map("category_id")
  createdAt   DateTime     @map("created_at") @default(now())
  updatedAt   DateTime     @map("updated_at") @updatedAt

  category    Category    @relation(fields: [categoryId], references: [id])

  activities  UserActivity[]

  @@map("action")
}

model Challenge {
  id          Int          @id @default(autoincrement())
  name        String
  date        DateTime
  description String?
  categoryId  Int          @map("category_id")
  createdAt   DateTime     @map("created_at") @default(now())
  updatedAt   DateTime     @map("updated_at") @updatedAt

  category    Category    @relation(fields: [categoryId], references: [id])

  activities  UserActivity[]

  @@map("challenge")
}

model Ranking {
  id          Int          @id @default(autoincrement())
  userId      Int          @map("user_id")
  points      Int
  createdAt   DateTime     @map("created_at") @default(now())
  updatedAt   DateTime     @map("updated_at") @updatedAt

  user        User         @relation(fields: [userId], references: [id])

  @@map("ranking")
}

model UserActivity {
  id          Int                 @id @default(autoincrement())
  userId      Int                 @map("user_id")
  actionId    Int?                @map("action_id")
  challengeId Int?                @map("challenge_id")
  
  photoUrl    String?             @map("photo_url")
  
  status      UserActivityStatus  @default(PENDING)
  approverId  Int?                @map("approver_id")
  approvedAt  DateTime?           @map("approved_at")
  repprovedDescription String?    @map("repproved_description")

  date        DateTime            @map("date")
  createdAt   DateTime            @map("created_at") @default(now())
  updatedAt   DateTime            @map("updated_at") @updatedAt

  user        User                @relation("UserActivities", fields: [userId], references: [id])
  action      Action?             @relation(fields: [actionId], references: [id])
  challenge   Challenge?          @relation(fields: [challengeId], references: [id])
  approver    User?               @relation("Approver", fields: [approverId], references: [id])

  @@map("user_activities")
}

model Image {
  id           Int      @id @default(autoincrement())
  originalName String   @map("original_name")
  fileName     String   @unique @map("file_name")
  mimeType     String   @map("mime_type")
  size         Int
  url          String
  userId       Int      @map("user_id")
  createdAt    DateTime @map("created_at") @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fileName])
  @@map("images")
}
